<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/cardview_light_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/new_contact_contact_initials"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_textview"
                android:maxLength="2"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/text_margin"
                android:layout_marginBottom="@dimen/text_margin"
                android:layout_marginStart="@dimen/text_margin"
                android:padding="1dp"
                android:text="@string/new_contact_tv_contact_initials"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="35sp"
                android:textColor="@color/colorContactInitials"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/new_contact_contact_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_margin"
                    android:layout_marginRight="@dimen/text_margin"
                    android:padding="1dp"
                    android:text="@string/new_contact_tv_contact_name"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textColor="@android:color/black" />

                <!--<TextView-->
                    <!--android:id="@+id/new_contact_email"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:maxLength="40"-->
                    <!--android:layout_marginLeft="@dimen/text_margin"-->
                    <!--android:layout_marginRight="@dimen/text_margin"-->
                    <!--android:layout_marginBottom="@dimen/text_margin"-->
                    <!--android:padding="1dp"-->
                    <!--android:text="@string/new_contact_tv_email"-->
                    <!--android:textAppearance="?attr/textAppearanceListItem"-->
                    <!--android:textSize="12sp"-->
                    <!--android:textColor="@color/colorSecondaryText"/>-->
            </LinearLayout>
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/new_contact_butt_send_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/text_margin"
                android:text="@string/new_contact_butt_hint" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>