<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_request_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/half_white"
    android:overScrollMode="never"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_received_request_recycler_received"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:paddingBottom="10dp"
            android:text="@string/text_received_request_recycler"
            android:textStyle="bold"
            android:textSize="24sp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_fragment_request_received"
            android:name="team7.tcss450.uw.edu.tcss_750_t7_2.RequestContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layoutMode="opticalBounds"
            tools:context=".RequestReceivedListFragment"
            tools:listitem="@layout/fragment_request_received_item" />

        <TextView
            android:id="@+id/text_sent_request_recycler_fragment_sent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:gravity="center_horizontal|center_vertical"
            android:paddingBottom="10dp"
            android:text="@string/text_sent_request_textSent"
            android:textStyle="bold"
            android:textSize="24sp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_fragment_request_sent"
            android:name="team7.tcss450.uw.edu.tcss_750_t7_2.RequestContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fadeScrollbars="true"
            tools:context=".RequestSentListFragment"
            tools:listitem="@layout/fragment_request_sent_item" />


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>







